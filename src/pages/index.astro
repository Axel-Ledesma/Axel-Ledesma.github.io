---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Experiencie from "../components/Experiencie.astro";
import Projects from "../components/Projects.astro";
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Line from "../components/extras/Line.astro";
import Linkedin from "../components/extras/Linkedin.astro";
import Github from "../components/extras/Github.astro";
import Cv from "../components/extras/Cv.astro";
---

<Layout
  title="Axel Ledesma - Desarrollador Web"
  description="Sitio web acerca de Axel Ledesma, programador y desarrollador web full stack"
>
  <nav>
    <Navbar />
  </nav>
  <main>
    <div class="animate-bg-animated">
      <section
        class="pt-60 px-4 md:pt-40 md:gap-8 md:justify-center md:items-center"
      >
        <h1 class="py-4 text-center text-5xl md:text-7xl lg:text-8xl">
          Axel Ledesma
        </h1>
        <h2 class="text-center text-3xl md:text-7xl lg:text-8xl">
          Programador Web
        </h2>
        <div class="flex gap-4 justify-center items-center py-6">
          <Linkedin />
          <Github />
        </div>
        <Cv />
      </section>
    </div>
    <Experiencie />
    <Projects />
    <About />
  </main>
  <footer>
    <Contact />
  </footer>
</Layout>

<style>
  .animate-bg-animated {
    background: linear-gradient(45deg, #46363b, #3b3638, #58545b, #1c252c);
    background-size: 400% 400%;
  }
</style>
