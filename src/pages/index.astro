---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Experiencie from "../components/Experiencie.astro";
import Projects from "../components/Projects.astro";
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Line from "../components/extras/Line.astro";
import Linkedin from "../components/extras/Linkedin.astro";
import Github from "../components/extras/Github.astro";
import Cv from "../components/extras/Cv.astro";
---

<Layout
  title="Axel Ledesma - Desarrollador Web"
  description="Sitio web acerca de Axel Ledesma, programador y desarrollador web full stack"
>
  <nav>
    <Navbar />
  </nav>
  <main>
    <div class="space-y-10 pt-20 pb-5 px-4 md:flex md:gap-8 md:justify-center md:items-center lg:py-40">
      <img
        class="aspect-[376/376] size-40 md:max-w-60 rounded mx-auto md:mx-0"
        src="/foto.webp"
        alt="Foto de Axel Ledesma"
      />
      <h1 class="text-center text-5xl md:text-7xl lg:text-8xl">
        Axel Ledesma <br />
        <Line class="border-b m-auto w-20 md:w-40 border-main flex py-1" />
        Programador Web
      </h1>
    </div>
    <div class="flex gap-4 justify-center items-center py-4">
      <Linkedin />
      <Github />
    </div>
    <Cv />
    <Experiencie />
    <Projects />
    <About />
  </main>
  <footer>
    <Contact />
  </footer>
</Layout>
